<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/name_TV"
                android:layout_alignParentTop="true"
                android:src="@mipmap/hero_text_tag" />

            <TextView
                android:id="@+id/name_TV"
                style="@style/skill_title_textview_style"
                android:layout_toRightOf="@+id/imageView"
                android:text="AP打发法" />

            <TextView
                android:id="@+id/insert_date_TV"
                style="@style/chuzhuang_content_textview_style"
                android:layout_alignBaseline="@+id/name_TV"
                android:layout_alignBottom="@+id/name_TV"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center">

            <TextView
                style="@style/chuzhuang_title_textview_style"
                android:text="作者" />

            <TextView
                android:id="@+id/smooth_author_TV"
                style="@style/chuzhuang_content_textview_style"
                android:text="喔喔喔" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                style="@style/chuzhuang_title_textview_style"
                android:text="天赋" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:src="@mipmap/hero_strategy_gift1" />

            <TextView
                android:id="@+id/smooth_inborn1"
                style="@style/chuzhuang_content_textview_style"
                android:text="21" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/hero_strategy_gift2" />

            <TextView
                android:id="@+id/smooth_inborn2"
                style="@style/chuzhuang_content_textview_style"
                android:text="9" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/hero_strategy_gift3" />

            <TextView
                android:id="@+id/smooth_inborn3"
                style="@style/chuzhuang_content_textview_style"
                android:text="0" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fuwen"
                style="@style/chuzhuang_title_textview_style"
                android:text="符文" />

            <TextView
                android:id="@+id/jinghua_TV"
                android:layout_toRightOf="@+id/fuwen"
                style="@style/skill_content_textview_style"
                android:text="精华：高级法术强度精华 x3" />

            <TextView
                android:layout_below="@+id/fuwen"
                android:layout_alignLeft="@+id/jinghua_TV"
                android:id="@+id/yinji_TV"
                style="@style/skill_content_textview_style"
                android:text="印记：高级法术穿透印记 x9" />

            <TextView
                android:layout_below="@+id/yinji_TV"
                android:layout_alignLeft="@+id/yinji_TV"
                android:id="@+id/fuyin_TV"
                style="@style/skill_content_textview_style"
                android:text="符印：高级生命值符印 x9" />

            <TextView
                android:layout_below="@+id/fuyin_TV"
                android:layout_alignLeft="@+id/fuyin_TV"
                android:id="@+id/diaowen_TV"
                style="@style/skill_content_textview_style"
                android:text="雕纹：高级成长法术强度雕纹 x9" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>